{
  "name": "UzSMSPanel",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "nest build",
    "build:frontend": "nest build frontend",
    "build:dashboard": "nest build dashboard",
    "build:excel": "nest build excel",
    "build:all": "npm run build:frontend && npm run build:dashboard && npm run build:excel",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:frontend": "nest start frontend --watch",
    "start:dashboard": "nest start dashboard --watch",
    "start:excel": "nest start excel --watch",
    "start:dev": "concurrently \"npm run start:dashboard\" \"npm run start:frontend\" \"npm run start:excel\"",
    "start:dev:frontend": "concurrently \"npm run start:frontend\" \"npm run start:excel\"",
    "start:dev:dashboard": "concurrently \"npm run start:dashboard\" \"npm run start:excel\"",
    "start:debug": "nest start --debug --watch",
    "start:prod:frontend": "node --max-old-space-size=2048 dist/src/frontend/main",
    "start:prod:dashboard": "node --max-old-space-size=2048 dist/src/dashboard/main",
    "start:prod:excel": "node --max-old-space-size=2048 dist/src/excel/main",
    "start:prod": "concurrently \"npm run start:prod:dashboard\" \"npm run start:prod:frontend\" \"npm run start:prod:excel\"",
    "start:prod:optimized": "node --max-old-space-size=4096 --optimize-for-size --gc-interval=100 dist/src/frontend/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:load": "npm run build && node dist/test/load-test.js",
    "performance:monitor": "node --inspect dist/src/utils/performance-monitor.js",
    "docker:build": "docker build -t uzsmspanel .",
    "docker:build:dashboard": "docker build -f Dockerfile.dashboard -t uzsmspanel-dashboard .",
    "docker:build:frontend": "docker build -f Dockerfile.frontend -t uzsmspanel-frontend .",
    "docker:up": "docker-compose -f docker-compose.prod.yml up -d --build",
    "docker:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "docker:restart": "docker-compose -f docker-compose.prod.yml restart",
    "docker:ps": "docker-compose -f docker-compose.prod.yml ps",
    "docker:clean": "docker-compose -f docker-compose.prod.yml down -v --rmi all"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/bull": "^11.0.3",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/multer": "^2.0.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "concurrently": "^9.2.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.0",
    "form-data": "^4.0.4",
    "jsonwebtoken": "^9.0.2",
    "libphonenumber-js": "^1.12.10",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.6",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "redis": "^4.7.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "smpp": "^0.6.0-rc.4",
    "sms-counter": "^1.0.0",
    "speakeasy": "^2.0.0",
    "typeorm": "^0.3.25",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/nodemailer": "^7.0.0",
    "@types/supertest": "^6.0.2",
    "@types/xlsx": "^0.0.36",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
